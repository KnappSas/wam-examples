{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "sourceMap": true,
    "lib": ["es2020", "dom", "dom.iterable"],
    "outDir": "dist",
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}